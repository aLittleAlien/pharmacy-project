<html t:type="layout" title="Browse User" t:sidebarTitle="Pages"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">



	<t:grid  source="categories" row="category" add=" Edit, Delete">
    
   	<p:editcell>
			 <t:pagelink page="category/ModifyCategory" context="category.id">Edit</t:pagelink>
            
    	</p:editcell>
   
 		<p:deletecell>
			 <t:actionlink t:id="delete" context="category.id">Delete</t:actionlink>
            
    	</p:deletecell>
    
    </t:grid>


</html>
    		