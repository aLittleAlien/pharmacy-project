    		<html t:type="layout" title="User registration"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
      
      <h1 class="title">Register user</h1>
    		<t:beaneditform t:id="users" object="users" add="password2" submitLabel="Sign up!" reorder="username, password, password2">
    			<p:password>
    				<t:label for="password">Password</t:label>
    				<t:passwordfield t:id="password" value="users.password"></t:passwordfield>
    			</p:password>
    			
    			<p:password2>
    				<t:label for="password2">Confirm password</t:label>
    				<t:passwordfield t:id="password2" value="password2"></t:passwordfield>
    			</p:password2>
    		</t:beaneditform>

</html>
