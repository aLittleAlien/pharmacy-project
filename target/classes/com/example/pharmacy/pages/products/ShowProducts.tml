<html t:type="layout" title="Browse User" t:sidebarTitle="Pages"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

    <body>
	<table border="1">
		<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Code</th>
					<th>Category</th>
					<th>Manufacturer</th>
					<th>Price</th>
				</tr>
			</thead>
			<tbody>
				<tr t:type="Loop" t:source="products" t:value="product">
					<td>${product.id}</td>
					<td>${product.name}</td>
					<td>${product.code}</td>
					<td>${product.category.name}</td>
					<td>${product.manufacturer.name}</td>
					<td>${product.price}</td>
					
					
				</tr>
			</tbody>
	</table>
</body>

	
</html>
    		